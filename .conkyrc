alignment top_left
#gap_x 0
gap_y 0
background no
border_width 0
border_margin 0
cpu_avg_samples 2
draw_borders no
draw_graph_borders yes
draw_outline no
draw_shades no
use_xft yes
xftfont DejaVu Sans Mono:size=10
#xftfont WenQuanYi Micro Hei Light:size=10
override_utf8_locale yes
#gap_x 5
#gap_y 60
minimum_size 1366 768
own_window_argb_visual yes
own_window_argb_value 0
xftalpha 1
net_avg_samples 2
double_buffer yes
out_to_console no
out_to_stderr no
extra_newline no
own_window yes
own_window_class conky
own_window_colour 000000
own_window_type override
stippled_borders 0
update_interval 1.0
uppercase no
use_spacer none
show_graph_scale no
show_graph_range no
if_up_strictness address
default_color ffffff
default_shade_color black
default_outline_color DarkGrey
color1 ffffff
color2 000000
color3 98c2c7
lua_load ~/.conky/base.lua
lua_load ~/.conky/fire.lua

TEXT
${lua pconfire}
${offset 28}${voffset 20}\
${font 04b11:pixelsize=85}\
${if_match ${lua if_batt}==1}\
${battery_percent}%\
${else}\
EX\
${endif}
${voffset -89}${offset 1040}\
${font 04b11:pixelsize=85}${time %H:%M}
${offset 1040}${voffset -59}\
${font 04b11:pixelsize=25}${time %b %d}
${offset 1246}${voffset -28}${time %Y}
${if_match ${lua if_batt}==1}\
${font 04b11:pixelsize=28}${voffset -24}${offset 28}\
${if_match ${lua if_discharging}==1}\
${color #ffe07f}\
${else}\
${color #a5ff3a}\
${endif}\
${battery_time}\
${endif}
